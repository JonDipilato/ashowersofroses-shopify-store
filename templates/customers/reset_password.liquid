<section class="section-shell">
  <div class="page-width" style="max-width: 480px; margin-inline: auto;">
    <h1 class="section-heading">Reset your password</h1>

    {% form 'reset_customer_password' %}
      <div style="margin-top: 1.4rem; display: grid; gap: 0.8rem;">
        {% if form.errors %}
          <div class="form-status form-status--error">
            {{ form.errors | default_errors }}
          </div>
        {% endif %}
        <div class="form-field">
          <label for="Password">New password</label>
          <input type="password" id="Password" name="customer[password]" autocomplete="new-password" required>
        </div>
        <div class="form-field">
          <label for="PasswordConfirm">Confirm new password</label>
          <input type="password" id="PasswordConfirm" name="customer[password_confirmation]" autocomplete="new-password" required>
        </div>
        <button type="submit" class="btn btn-primary btn-wide">Reset password</button>
      </div>
    {% endform %}
  </div>
</section>
