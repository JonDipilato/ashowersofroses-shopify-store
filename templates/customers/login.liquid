<section class="section-shell">
  <div class="page-width" style="max-width: 480px; margin-inline: auto;">
    <h1 class="section-heading">Sign in</h1>

    {% form 'customer_login' %}
      <div style="margin-top: 1.4rem; display: grid; gap: 0.8rem;">
        {% if form.errors %}
          <div class="form-status form-status--error">
            {{ form.errors | default_errors }}
          </div>
        {% endif %}
        <div class="form-field">
          <label for="CustomerEmail">Email</label>
          <input type="email" id="CustomerEmail" name="customer[email]" autocomplete="email" required>
        </div>
        <div class="form-field">
          <label for="CustomerPassword">Password</label>
          <input type="password" id="CustomerPassword" name="customer[password]" autocomplete="current-password" required>
        </div>
        <button type="submit" class="btn btn-primary btn-wide">Sign in</button>
        <p style="text-align: center; font-size: 0.88rem;">
          <a href="{{ routes.account_recover_url }}">Forgot your password?</a>
        </p>
        <p style="text-align: center; font-size: 0.88rem;">
          Don't have an account? <a href="{{ routes.account_register_url }}">Create one</a>
        </p>
      </div>
    {% endform %}
  </div>
</section>
