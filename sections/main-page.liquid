<section class="section-shell">
  <div class="page-width page-template">
    <p class="section-kicker">Page</p>
    <h1 class="page-template__title">{{ page.title }}</h1>
    {% render 'ornamental-divider', style: section.settings.divider_style %}
    <div class="rte">{{ page.content }}</div>
  </div>
</section>

{% schema %}
{
  "name": "Main page",
  "settings": [
    {
      "type": "select",
      "id": "divider_style",
      "label": "Ornamental divider",
      "default": "line",
      "options": [
        {
          "value": "line",
          "label": "Line"
        },
        {
          "value": "arabesque",
          "label": "Arabesque"
        },
        {
          "value": "botanical",
          "label": "Botanical"
        }
      ]
    }
  ]
}
{% endschema %}
