<section class="trust-bar">
  <div class="page-width trust-items">
    {% for block in section.blocks %}
      <div class="trust-item" {{ block.shopify_attributes }}>
        <span class="trust-item__icon" aria-hidden="true">
          {% case block.settings.icon %}
            {% when 'seal' %}
              <svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                <circle cx="12" cy="10" r="6.5" stroke="currentColor" stroke-width="1.4" />
                <path d="M9 16L8 22L12 19.8L16 22L15 16" stroke="currentColor" stroke-width="1.4" stroke-linecap="round" stroke-linejoin="round" />
              </svg>
            {% when 'gift' %}
              <svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                <rect x="3" y="9" width="18" height="12" rx="1.8" stroke="currentColor" stroke-width="1.4" />
                <path d="M12 9V21" stroke="currentColor" stroke-width="1.4" />
                <path d="M3 13H21" stroke="currentColor" stroke-width="1.4" />
                <path d="M8 8C8 6.6 9 5.4 10.4 5.4C11.8 5.4 12.8 6.6 12.8 8V9H8V8Z" stroke="currentColor" stroke-width="1.4" />
                <path d="M11.2 8C11.2 6.6 12.2 5.4 13.6 5.4C15 5.4 16 6.6 16 8V9H11.2V8Z" stroke="currentColor" stroke-width="1.4" />
              </svg>
            {% when 'cross' %}
              <svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M12 3V21" stroke="currentColor" stroke-width="1.4" />
                <path d="M6 8.5H18" stroke="currentColor" stroke-width="1.4" />
              </svg>
            {% else %}
              <svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M12 4L20 8.4V14.4C20 17.5 16.8 20 12 22C7.2 20 4 17.5 4 14.4V8.4L12 4Z" stroke="currentColor" stroke-width="1.4" />
                <path d="M9 12L11.2 14.2L15.4 10" stroke="currentColor" stroke-width="1.4" stroke-linecap="round" stroke-linejoin="round" />
              </svg>
          {% endcase %}
        </span>
        <div>
          <p class="trust-item__heading">{{ block.settings.heading }}</p>
          {% if block.settings.text != blank %}
            <p class="trust-item__text">{{ block.settings.text }}</p>
          {% endif %}
        </div>
      </div>
    {% endfor %}
  </div>
</section>

{% schema %}
{
  "name": "Trust bar",
  "blocks": [
    {
      "type": "item",
      "name": "Trust item",
      "settings": [
        {
          "type": "select",
          "id": "icon",
          "label": "Icon",
          "default": "seal",
          "options": [
            {
              "value": "seal",
              "label": "Seal"
            },
            {
              "value": "gift",
              "label": "Gift"
            },
            {
              "value": "cross",
              "label": "Cross"
            },
            {
              "value": "shield",
              "label": "Shield"
            }
          ]
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Gift-ready presentation"
        },
        {
          "type": "text",
          "id": "text",
          "label": "Text",
          "default": "Elegant wrapping and handwritten enclosure options at checkout."
        }
      ]
    }
  ],
  "max_blocks": 4,
  "presets": [
    {
      "name": "Trust bar",
      "blocks": [
        {
          "type": "item",
          "settings": {
            "icon": "gift",
            "heading": "Gift-ready presentation",
            "text": "Elegant wrapping and enclosure options for sacred occasions."
          }
        },
        {
          "type": "item",
          "settings": {
            "icon": "seal",
            "heading": "Curated quality",
            "text": "Pieces selected for devotion, beauty, and enduring craftsmanship."
          }
        },
        {
          "type": "item",
          "settings": {
            "icon": "cross",
            "heading": "Sacramental focus",
            "text": "Navigation and collections organized around sacramental milestones."
          }
        },
        {
          "type": "item",
          "settings": {
            "icon": "shield",
            "heading": "Secure checkout",
            "text": "Protected payment and clear fulfillment communication."
          }
        }
      ]
    }
  ]
}
{% endschema %}
