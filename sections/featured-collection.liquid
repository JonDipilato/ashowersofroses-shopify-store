<section class="section-shell">
  <div class="page-width">
    {% if section.settings.kicker != blank %}
      <p class="section-kicker">{{ section.settings.kicker }}</p>
    {% endif %}
    <h2 class="section-heading">{{ section.settings.heading }}</h2>
    {% if section.settings.subheading != blank %}
      <p class="section-subhead">{{ section.settings.subheading }}</p>
    {% endif %}

    {% assign featured_collection = collections[section.settings.collection] %}
    {% if featured_collection != blank and featured_collection.products_count > 0 %}
      <div class="featured-grid" style="margin-top: 1.6rem;">
        {% for product in featured_collection.products limit: section.settings.product_limit %}
          {% render 'product-card', product: product, show_vendor: section.settings.show_vendor %}
        {% endfor %}
      </div>
      <div style="margin-top: 1.4rem;">
        <a class="btn btn-secondary" href="{{ featured_collection.url }}">{{ 'general.view_all' | t }} {{ featured_collection.title }}</a>
      </div>
    {% endif %}
  </div>
</section>

{% schema %}
{
  "name": "Featured collection",
  "settings": [
    {
      "type": "text",
      "id": "kicker",
      "label": "Kicker",
      "default": "Handpicked"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Featured for this season"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading",
      "default": "A refined selection prepared for meaningful giving."
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection"
    },
    {
      "type": "range",
      "id": "product_limit",
      "label": "Products shown",
      "min": 2,
      "max": 12,
      "step": 1,
      "default": 4
    },
    {
      "type": "checkbox",
      "id": "show_vendor",
      "label": "Show vendor",
      "default": false
    }
  ],
  "presets": [
    {
      "name": "Featured collection"
    }
  ]
}
{% endschema %}
