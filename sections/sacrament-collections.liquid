<section class="section-shell" id="sacraments">
  <div class="page-width">
    {% if section.settings.kicker != blank %}
      <p class="section-kicker">{{ section.settings.kicker }}</p>
    {% endif %}
    <h2 class="section-heading">{{ section.settings.heading }}</h2>
    {% if section.settings.subheading != blank %}
      <p class="section-subhead">{{ section.settings.subheading }}</p>
    {% endif %}

    {% if section.blocks.size > 0 %}
      <div class="sacrament-grid" style="margin-top: 1.6rem;">
        {% for block in section.blocks %}
          {% assign card_collection = collections[block.settings.collection] %}
          {% if card_collection != blank %}
            {% assign card_image = card_collection.image | default: card_collection.products.first.featured_image %}
            <a class="sacrament-card card-surface" href="{{ card_collection.url }}" {{ block.shopify_attributes }}>
              {% if card_image %}
                <div class="sacrament-card__media">
                  {{ card_image | image_url: width: 1000 | image_tag: loading: 'lazy', widths: '340,480,680,840,1000', sizes: '(min-width: 900px) 33vw, 100vw' }}
                </div>
              {% endif %}
              <div class="sacrament-card__body">
                <h3 class="sacrament-card__title">{{ block.settings.title | default: card_collection.title }}</h3>
                {% if block.settings.description != blank %}
                  <p class="sacrament-card__desc">{{ block.settings.description }}</p>
                {% elsif card_collection.description != blank %}
                  <p class="sacrament-card__desc">{{ card_collection.description | strip_html | truncatewords: 18 }}</p>
                {% endif %}
              </div>
            </a>
          {% endif %}
        {% endfor %}
      </div>
    {% endif %}
  </div>
</section>

{% schema %}
{
  "name": "Sacrament collections",
  "settings": [
    {
      "type": "text",
      "id": "kicker",
      "label": "Kicker",
      "default": "Sacramental path"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Shop by sacrament"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading",
      "default": "Guide families and godparents to gifts that honor each sacrament with care."
    }
  ],
  "blocks": [
    {
      "type": "collection",
      "name": "Collection",
      "settings": [
        {
          "type": "collection",
          "id": "collection",
          "label": "Collection"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title override"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description override"
        }
      ]
    }
  ],
  "max_blocks": 8,
  "presets": [
    {
      "name": "Sacrament collections"
    }
  ]
}
{% endschema %}
