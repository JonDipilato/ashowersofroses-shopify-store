<section class="section-shell">
  <div class="page-width">
    <div class="newsletter-box card-surface">
      <div class="newsletter-box__layout">
        <div>
          {% if section.settings.kicker != blank %}
            <p class="section-kicker">{{ section.settings.kicker }}</p>
          {% endif %}
          <h2 class="section-heading">{{ section.settings.heading }}</h2>
          {% if section.settings.text != blank %}
            <p class="section-subhead">{{ section.settings.text }}</p>
          {% endif %}
        </div>

        {% form 'customer', class: 'newsletter-form' %}
          <input type="hidden" name="contact[tags]" value="newsletter">

          {% if form.errors %}
            <p class="form-status form-status--error">{{ form.errors | default_errors }}</p>
          {% endif %}

          {% if form.posted_successfully? %}
            <p class="form-status form-status--success">{{ 'newsletter.success' | t }}</p>
          {% endif %}

          <div class="newsletter-form__row">
            <div class="form-field">
              <label for="NewsletterEmail-{{ section.id }}">{{ 'newsletter.label' | t }}</label>
              <input
                id="NewsletterEmail-{{ section.id }}"
                type="email"
                name="contact[email]"
                required
                autocomplete="email"
                value="{% if customer %}{{ customer.email }}{% endif %}"
              >
            </div>
            <button class="btn btn-primary" type="submit">
              {% if section.settings.button_label != blank %}
                {{ section.settings.button_label }}
              {% else %}
                {{ 'newsletter.button' | t }}
              {% endif %}
            </button>
          </div>
        {% endform %}
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Newsletter",
  "settings": [
    {
      "type": "text",
      "id": "kicker",
      "label": "Kicker",
      "default": "Notes from the atelier"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Receive liturgical edits and gifting guidance"
    },
    {
      "type": "textarea",
      "id": "text",
      "label": "Description",
      "default": "Occasional emails with feast-day curation, sacrament gift ideas, and newly arrived keepsakes."
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button label",
      "default": "Join"
    }
  ],
  "presets": [
    {
      "name": "Newsletter"
    }
  ]
}
{% endschema %}
