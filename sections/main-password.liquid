<section class="section-shell" style="min-height: 60vh; display: grid; place-items: center;">
  <div class="page-width" style="text-align: center; max-width: 560px;">
    <h1 class="section-heading">{{ shop.name }}</h1>
    <p class="section-subhead" style="margin-inline: auto;">{{ shop.password_message }}</p>

    {% form 'storefront_password' %}
      <div style="margin-top: 1.6rem; display: grid; gap: 0.8rem;">
        {% if form.errors %}
          <div class="form-status form-status--error">
            {{ form.errors | default_errors }}
          </div>
        {% endif %}
        <div class="form-field">
          <label for="Password">Password</label>
          <input type="password" id="Password" name="password" placeholder="Enter store password">
        </div>
        <button type="submit" class="btn btn-primary">Enter</button>
      </div>
    {% endform %}
  </div>
</section>

{% schema %}
{
  "name": "Password",
  "settings": []
}
{% endschema %}
