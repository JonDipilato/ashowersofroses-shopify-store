<section class="section-shell" id="catalog">
  <div class="page-width">
    {% if section.settings.kicker != blank %}
      <p class="section-kicker">{{ section.settings.kicker }}</p>
    {% endif %}
    <h2 class="section-heading">{{ section.settings.heading }}</h2>
    {% if section.settings.subheading != blank %}
      <p class="section-subhead">{{ section.settings.subheading }}</p>
    {% endif %}

    {% assign catalog = collections.all %}
    {% if catalog != blank and catalog.products_count > 0 %}
      <div class="product-grid" style="margin-top: 1.6rem;">
        {% for product in catalog.products limit: section.settings.product_limit %}
          {% render 'product-card', product: product, show_vendor: section.settings.show_vendor %}
        {% endfor %}
      </div>

      {% if catalog.products_count > section.settings.product_limit %}
        <div style="margin-top: 1.6rem; text-align: center;">
          <a class="btn btn-secondary" href="{{ catalog.url }}">View all {{ catalog.products_count }} products</a>
        </div>
      {% endif %}
    {% endif %}
  </div>
</section>

{% schema %}
{
  "name": "Catalog grid",
  "settings": [
    {
      "type": "text",
      "id": "kicker",
      "label": "Kicker",
      "default": "Full collection"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Shop our collection"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading",
      "default": "Every piece in our atelier, ready to give."
    },
    {
      "type": "range",
      "id": "product_limit",
      "label": "Products shown",
      "min": 4,
      "max": 50,
      "step": 1,
      "default": 25
    },
    {
      "type": "checkbox",
      "id": "show_vendor",
      "label": "Show vendor",
      "default": false
    }
  ],
  "presets": [
    {
      "name": "Catalog grid"
    }
  ]
}
{% endschema %}
